<Window x:Class="HTD.App.AddWindows.AddPupilWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HTD.App.AddWindows"
        mc:Ignorable="d"
        Title="Добавить ученика"
        Height="310"
        Width="300"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.0*"/>
            <RowDefinition Height="50px"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0"
                    Margin="5">
            <TextBlock Text="Ф.И.О. ученика:"
                       FontSize="14"
                       Height="25px"/>
            <TextBox x:Name="NameTB"
                     Height="25px"
                     VerticalContentAlignment="Center"
                     FontSize="14"/>
            <TextBlock Text="Ф.И.О. представителя:"
                       FontSize="14"
                       Height="25px"/>
            <TextBox x:Name="ParentTB"
                     Height="25px"
                     VerticalContentAlignment="Center"
                     FontSize="14"/>
            <TextBlock Text="Мобильный номер представителя:"
                       FontSize="14"
                       Height="25px"/>
            <TextBox x:Name="PhoneTB"
                     Height="25px"
                     VerticalContentAlignment="Center"
                     FontSize="14"/>
            <TextBlock Text="Дата рождения (ММ/ДД/ГГГГ):"
                       FontSize="14"
                       Height="25px"/>
            <DatePicker x:Name="BirthDayDP"
                        FontSize="14"
                        Height="25px"
                        FirstDayOfWeek="Monday"
                        Loaded="BirthDayDP_Loaded"/>
        </StackPanel>
        <Grid Grid.Row="1"
              Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="AddB"
                    Grid.Column="0"
                    Height="40px"
                    Width="130px"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom">
                <TextBlock TextAlignment="Center"
                           TextWrapping="Wrap"
                           Text="Добавить ученика"/>
            </Button>
            <Button x:Name="CloseB"
                    Grid.Column="1"
                    Height="25px"
                    Width="60px"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
                <TextBlock TextAlignment="Center"
                           TextWrapping="Wrap"
                           Text="Закрыть"/>
            </Button>
        </Grid>
    </Grid>
</Window>
