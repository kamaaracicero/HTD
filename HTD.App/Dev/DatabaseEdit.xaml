<Window x:Class="HTD.App.Dev.DatabaseEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HTD.App.Dev"
        mc:Ignorable="d"
        Title="Database Edit" Height="450" Width="800" Initialized="Window_Initialized">
    <Grid>
        <TabControl>
            <TabItem Header="Courses">
                <DataGrid x:Name="CoursesDG"
                          AutoGenerateColumns="False">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem x:Name="AddCourseMI"
                                      Header="Add"
                                      Click="AddCourseMI_Click"/>
                            <MenuItem x:Name="DeleteCourseMI"
                                      Header="Delete"
                                      Click="DeleteCourseMI_Click"/>
                            <MenuItem x:Name="UpdateCourseMI"
                                      Header="Update"
                                      Click="UpdateCourseMI_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id"
                                            Width=".1*"
                                            Binding="{Binding Path=Id}"/>
                        <DataGridTextColumn Header="Name"
                                            Width=".1*"
                                            Binding="{Binding Path=Name}"/>
                        <DataGridTextColumn Header="Type Id"
                                            Width=".1*"
                                            Binding="{Binding Path=TypeId}"/>
                        <DataGridTextColumn Header="Is Active"
                                            Width=".1*"
                                            Binding="{Binding Path=IsActive}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Groups">
                <DataGrid x:Name="GroupsDG"
                          AutoGenerateColumns="False">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem x:Name="AddGroupMI"
                                      Header="Add"
                                      Click="AddGroupMI_Click"/>
                            <MenuItem x:Name="DeleteGroupMI"
                                      Header="Delete"
                                      Click="DeleteGroupMI_Click"/>
                            <MenuItem x:Name="UpdateGroupMI"
                                      Header="Update"
                                      Click="UpdateGroupMI_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id"
                                            Width=".1*"
                                            Binding="{Binding Path=Id}"/>
                        <DataGridTextColumn Header="Course Id"
                                            Width=".1*"
                                            Binding="{Binding Path=CourseId}"/>
                        <DataGridTextColumn Header="Name"
                                            Width=".1*"
                                            Binding="{Binding Path=Name}"/>
                        <DataGridTextColumn Header="Year"
                                            Width=".1*"
                                            Binding="{Binding Path=Year}"/>
                        <DataGridTextColumn Header="Is Active"
                                            Width=".1*"
                                            Binding="{Binding Path=IsActive}"/>
                        <DataGridTextColumn Header="Payment"
                                            Width=".1*"
                                            Binding="{Binding Path=Payment}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Incomes">
                <DataGrid x:Name="IncomesDG"
                          AutoGenerateColumns="False">
