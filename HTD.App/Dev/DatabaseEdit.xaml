                        <DataGridTextColumn Header="Group Id"
                                            Width=".1*"
                                            Binding="{Binding Path=GroupId}"/>
                        <DataGridTextColumn Header="Pupil Id"
                                            Width=".1*"
                                            Binding="{Binding Path=PupilId}"/>
                        <DataGridTextColumn Header="Order Number"
                                            Width=".1*"
                                            Binding="{Binding Path=OrderNumber}"/>
                        <DataGridTextColumn Header="Date"
                                            Width=".1*"
                                            Binding="{Binding Path=Date}"/>
                        <DataGridTextColumn Header="Payment"
                                            Width=".1*"
                                            Binding="{Binding Path=Payment}"/>
                    </DataGrid.Columns>
                </DataGrid>
