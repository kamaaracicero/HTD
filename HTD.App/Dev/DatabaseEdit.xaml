                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="TeacherCourses">
                <DataGrid x:Name="TeacherCoursesDG"
                          AutoGenerateColumns="False">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem x:Name="AddTeacherCourseMI"
