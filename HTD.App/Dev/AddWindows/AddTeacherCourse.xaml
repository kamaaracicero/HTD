<Window x:Class="HTD.App.Dev.AddWindows.AddTeacherCourse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HTD.App.Dev.AddWindows"
        mc:Ignorable="d"
        Title="Add Teacher Course" Height="160" Width="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.0*"/>
            <RowDefinition Height="20px"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Height="25px"
                       Text="Teacher Id:"
                       TextAlignment="Center"/>
            <TextBox x:Name="TeacherIdTB"
                     Height="25px"/>
            <TextBlock Height="25px"
                       Text="Course Id:"
                       TextAlignment="Center"/>
            <TextBox x:Name="CourseIdTB"
                     Height="25px"/>
        </StackPanel>
        <Button x:Name="AddB"
                Grid.Row="1"
                Content="Add"/>
    </Grid>
</Window>
